{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="blog-promo">

  {% assign blogPromoImageAlt = settings.blog-promo-cta | escape %}
  {% if settings.blog-promo-url != blank %}
    {% comment %}ly_asset_replace_for_[ 'blog-promo-image.jpg' | asset_url | img_tag, blogPromoImageAlt,'blog-promo-image' | link_to: settings.blog-promo-url ]_begin{% endcomment %}{% assign ly_asset = 'blog-promo-image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag, blogPromoImageAlt,'blog-promo-image' | link_to: settings.blog-promo-url }}{% comment %}ly_asset_replace_end{% endcomment %}
  {% else %}
    {% comment %}ly_asset_replace_for_[ 'blog-promo-image.jpg' | asset_url | img_tag, blogPromoImageAlt,'blog-promo-image' ]_begin{% endcomment %}{% assign ly_asset = 'blog-promo-image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag, blogPromoImageAlt,'blog-promo-image' }}{% comment %}ly_asset_replace_end{% endcomment %}
  {% endif %}

  {% if settings.blog-promo-cta != blank or settings.blog-promo-subtitle != blank %}
    <div class="blog-promo-details">
      {% if settings.blog-promo-cta != blank %}
        <h3 class="blog-promo-title">
          {% if settings.blog-promo-url != blank %}
            {{ settings.blog-promo-cta | link_to: settings.blog-promo-url }}
          {% else %}
            {{ settings.blog-promo-cta }}
          {% endif %}
        </h3>
      {% endif %}

      {% if settings.blog-promo-subtitle != blank %}
        <p class="blog-promo-subtitle">
          {% if settings.blog-promo-url != blank %}
            {{ settings.blog-promo-subtitle | link_to: settings.blog-promo-url }}
          {% else %}
            {{ settings.blog-promo-subtitle }}
          {% endif %}
        </p>
      {% endif %}
    </div>
  {% endif %}

</div>
