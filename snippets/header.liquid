{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<header class="main-header" role="banner">

  <div class="header-tools-wrapper">
    <div class="header-tools">

      <div class="aligned-left">
        
        
       
        <p class="navigation-toggle"><span class="navigation-toggle-icon"><ly-as-1294286>Open menu</ly-as-1294286></span> <span class="navigation-toggle-text">{% comment %}ly_i18n_replace_for_[ 'layout.header.menu' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.menu' | t }}{% endcapture %}{% include 'ly-static-string' with '1294287' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span></p>

         <div class="fb-like" data-href="http://www.zoe-green.ca/" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
        
        {% include 'ly-languages-switcher' %}
        
        {% if settings.currency-switcher %}
        
                
          <div class="currency-wrapper">
            <p class="select-currency">{% comment %}ly_i18n_replace_for_[ 'layout.header.select_currency' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.select_currency' | t }}{% endcapture %}{% include 'ly-static-string' with '1294288' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
            <div class="select-wrapper currency-switcher">
              <span class="selected-currency"></span>
              <select id="currencies" name="currencies">
                {% capture codes %},USD,EUR,GBP,CAD,ARS,AUD,BBD,BDT,BSD,BHD,BRL,BOB,BND,BGN,ILS,MMK,KYD,CLP,CNY,COP,CRC,HRK,CZK,DKK,DOP,XCD,EGP,XPF,FJD,GHS,GTQ,GYD,GEL,HKD,HUF,ISK,INR,IDR,NIS,JMD,JPY,JOD,KZT,KES,KWD,LVL,LTL,MXN,MYR,MUR,MDL,MAD,MNT,MZN,ANG,NZD,NGN,NOK,OMR,PKR,PYG,PEN,PHP,PLN,QAR,RON,RUB,SAR,RSD,SCR,SGD,SYP,ZAR,KRW,LKR,SEK,CHF,TWD,THB,TZS,TTD,TRY,UAH,AED,UYU,VEB,VND,ZMK,{% endcapture %}
                {% assign supported_codes = settings.currency-switcher-supported-currencies | split: ' ' %}
                <option value="{{ shop.currency }}" selected="selected">{{ shop.currency }}</option>
                {% for code in supported_codes %}
                  {% if code != shop.currency and codes contains code %}
                  <option value="{{ code }}">{{ code }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="aligned-right">
      
        
        {% if shop.customer_accounts_enabled %}
          <div class="customer-links">
            {% if customer %}
              <a href="/account">{% comment %}ly_i18n_replace_for_[ 'layout.header.my_account' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.my_account' | t }}{% endcapture %}{% include 'ly-static-string' with '1294289' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>

              <div class="customer-links-inner">
                <span class="arrow"></span>
                <ul>
                  <li><a href="/account/orders">{% comment %}ly_i18n_replace_for_[ 'customers.general.purchases' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customers.general.purchases' | t }}{% endcapture %}{% include 'ly-static-string' with '1294290' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a></li>
                  <li><a href="/account/addresses">{% comment %}ly_i18n_replace_for_[ 'customers.addresses.header' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customers.addresses.header' | t }}{% endcapture %}{% include 'ly-static-string' with '1294291' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a></li>
                  <li>{% comment %}ly_i18n_replace_for_[ 'layout.header.logout' | t | customer_logout_link ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.logout' | t | customer_logout_link }}{% endcapture %}{% include 'ly-static-string' with '1294292' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape | customer_logout_link }}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</li>
                </ul>
              </div>
            {% else %}
              {% comment %}ly_i18n_replace_for_[ 'layout.header.account' | t | customer_login_link ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.account' | t | customer_login_link }}{% endcapture %}{% include 'ly-static-string' with '1294293' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape | customer_login_link }}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
            {% endif %}
          </div>
        {% endif %}

        <div class="mini-cart-wrapper">
          <a class="cart-count" href="/cart"><span class="cart-count-text">{% comment %}ly_i18n_replace_for_[ 'layout.header.cart' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.cart' | t }}{% endcapture %}{% include 'ly-static-string' with '1294294' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span> (<span class="cart-count-number">{{ cart.item_count }}</span>)</a>
          {% if cart.item_count > 0 %}
            {% include 'mini-cart' %}
          {% endif %}
        </div>
        <a class="checkout-link" href="/checkout{% comment %}ly_checkout_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign checkout_code = shop.metafields.language_codes[language] %}{% if checkout_code %}{% assign checkout_code = '?locale=' | append: checkout_code %}{{ checkout_code }}{% endif %}{% comment %}ly_checkout_end{% endcomment %}">{% comment %}ly_i18n_replace_for_[ 'layout.header.checkout' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.checkout' | t }}{% endcapture %}{% include 'ly-static-string' with '1294295' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>

        <form class="search-form" action="/search" method="get">
          <input class="search-input" name="q" type="text" placeholder="{% comment %}ly_i18n_replace_for_[ 'layout.header.search_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.header.search_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '1294296' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" value="{{ search.terms }}" />
          <input type="submit" value="î˜†" />
        </form>
   
      </div>

    </div>
  </div>

  <div class="branding" align="left">
    {% if settings.use-logo %}
      <a class="logo {% if settings.use-retina-logo %}has-retina{% endif %}" href="/">
        <img class="logo-regular" alt="{{ langify_shop_name | escape }}" src="{% comment %}ly_asset_replace_for_[ 'logo.png' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'logo.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" >
        {% if settings.use-retina-logo %}
          <img class="logo-retina" alt="{{ langify_shop_name | escape }}" src="{% comment %}ly_asset_replace_for_[ 'logo-retina.png' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'logo-retina.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}">
        {% endif %}
      </a>
    {% else %}
      <h1><a href="/">{{ langify_shop_name }}</a></h1>
    {% endif %}
    
  </div>

</header>
