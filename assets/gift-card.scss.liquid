  @if $point == xl {
    @media (min-width: 1281px) { @content; }
  }
  @else if $point == l {
    @media (max-width: 1280px) { @content; }
  }
  @else if $point == m {
    @media (max-width: 1020px) { @content; }
  }
  @else if $point == s {
    @media (max-width: 770px) { @content; }
  }
  @else if $point == xs {
    @media (max-width: 540px) { @content; }
  }
}

